{
  "extends": [
    "airbnb",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "import"
  ],
  "rules": {
    "arrow-body-style": 0,
    "consistent-return": 0,
    "indent": [2, 4, { "SwitchCase": 1 }],
    "object-curly-spacing": ["error", "never"],
    "import/no-extraneous-dependencies": [2, {  }],
    "import/extensions": 2,
    "max-len": [2, {"code": 150}],
    "no-mixed-operators": [
      "error",
      {
        "allowSamePrecedence": true
      }
    ],
    "one-var-declaration-per-line": "off",
    "one-var": "off"
  },
  "env": {
    "node": true,
    "mocha": true
  }
}